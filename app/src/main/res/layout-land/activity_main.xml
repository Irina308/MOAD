<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/c_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Currencies"

        app:layout_constraintBottom_toTopOf="@id/from_val_in_txt"
        />


    <EditText
        android:id="@+id/input_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"

        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/fromVal_spn"
        app:layout_constraintTop_toBottomOf="@id/c_toolbar" />


    <TextView
        android:id="@+id/from_val_in_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginStart="8dp"


        android:layout_marginBottom="12dp"
        android:text="From value in "
        app:layout_constraintBaseline_toBaselineOf="@id/input_txt"
        app:layout_constraintBottom_toBottomOf="@+id/fromVal_spn"
        app:layout_constraintEnd_toStartOf="@id/fromVal_spn"

        app:layout_constraintStart_toStartOf="parent" />


    <Spinner
        android:id="@+id/fromVal_spn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"

        app:layout_constraintEnd_toStartOf="@id/input_txt"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/from_val_in_txt"
        app:layout_constraintTop_toBottomOf="@+id/c_toolbar" />


    <TextView
        android:id="@+id/to_val_in_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="To value in "

        app:layout_constraintBottom_toBottomOf="@+id/toVal_spn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/from_val_in_txt"
        app:layout_constraintEnd_toStartOf="@id/toVal_spn"
        app:layout_constraintBaseline_toBaselineOf="@id/result_txt"

        />

    <Spinner
        android:id="@+id/toVal_spn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"

        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/calc_btn"
        app:layout_constraintEnd_toStartOf="@id/calc_btn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/to_val_in_txt"
        app:layout_constraintTop_toBottomOf="@+id/fromVal_spn" />

    <Button
        android:id="@+id/calc_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:onClick="calculateOnClick"

        android:text="Calculate"

        app:layout_constraintStart_toEndOf="@id/toVal_spn"
        app:layout_constraintEnd_toStartOf="@id/result_txt"
        app:layout_constraintTop_toBottomOf="@id/input_txt"
        app:layout_constraintBaseline_toBaselineOf="@id/result_txt"

        />


    <TextView
        android:id="@+id/result_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:text="0.00"
        android:textAlignment="textEnd"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/calc_btn"
        app:layout_constraintTop_toBottomOf="@id/input_txt" />

</android.support.constraint.ConstraintLayout>