<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/from_val_in_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"


        android:text="From value in "
        app:layout_constraintRight_toLeftOf="@+id/fromVal_spn"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/to_val_in_txt"
        />

    <Spinner
        android:id="@+id/fromVal_spn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toRightOf="@id/from_val_in_txt"
        app:layout_constraintRight_toLeftOf="@id/input_txt"
        app:layout_constraintBaseline_toBaselineOf="@id/from_val_in_txt"
        app:layout_constraintBottom_toTopOf="@id/toVal_spn"

        />

    <EditText
        android:id="@+id/input_txt"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"

        app:layout_constraintBottom_toTopOf="@+id/calc_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/fromVal_spn"

        android:layout_marginTop="8dp"

        />

    <TextView
        android:id="@+id/to_val_in_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"

        android:text="To value in "
        app:layout_constraintRight_toLeftOf="@+id/toVal_spn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/from_val_in_txt"
        />

    <Spinner
        android:id="@+id/toVal_spn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/fromVal_spn"
       app:layout_constraintLeft_toRightOf="@id/to_val_in_txt"
        app:layout_constraintRight_toLeftOf="@id/calc_btn"

        />

    <Button
        android:id="@+id/calc_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"
        android:onClick="calculateOnClick"
        android:text="Calculate"

        app:layout_constraintLeft_toRightOf="@id/toVal_spn"
        app:layout_constraintRight_toLeftOf="@id/result_txt"
        app:layout_constraintTop_toBottomOf="@id/input_txt" />


    <TextView
        android:id="@+id/result_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

        android:layout_marginEnd="8dp"

        android:text="0.00"
        app:layout_constraintBaseline_toBaselineOf="@id/calc_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/calc_btn"
        app:layout_constraintTop_toBottomOf="@id/input_txt" />


</android.support.constraint.ConstraintLayout>